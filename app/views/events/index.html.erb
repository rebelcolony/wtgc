<h1>All Events</h1>
<%= link_to 'Fetch data', fetch_events_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Title</th>
      
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each_with_index do |event, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= event.date.to_formatted_s(:short) %></td>
        <td><%= link_to event.title, event.url %></td>
        <td>
          <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', event_path(event), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_event_path, :class => 'btn btn-primary' %>
